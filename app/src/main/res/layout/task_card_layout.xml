<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorPrimary"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/primaryTextColor"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="6dp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:weightSum="10"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/task_card_number_text"
                   android:padding="2dp"
                   android:layout_width="0dp"
                   android:textFontWeight="800"
                   android:textColor="@color/secondaryDarkColor"
                   android:layout_weight="3"
                   android:fontFamily="@font/catamaran_regular"
                   android:text="1"
                   android:textSize="16sp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/task_card_creation_time"
                   android:padding="2dp"
                   android:textColor="#808080"
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:textStyle="italic"
                   android:textAlignment="textEnd"
                   android:fontFamily="@font/catamaran_regular"
                   android:text="Tue Mar 2022 15:32::56"
                   android:textSize="16sp"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <TextView
               android:id="@+id/task_card_title"
               android:layout_width="match_parent"
               android:text="Have proteins"
               android:textColor="#000"
               android:textAllCaps="true"
               android:padding="2dp"
               android:textSize="24sp"
               android:textFontWeight="900"
               android:fontFamily="@font/quicksand_medium"
               android:textAppearance="@style/TextAppearance.AppCompat.Body1"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/task_card_description"
               android:layout_width="match_parent"
               android:textColor="#000"
               android:fontFamily="@font/quicksand_regular"
               android:padding="2dp"
               android:text="Protein intake 20gms, steak intake 2 cal/gm, weight loss 2kg/week"
               android:layout_height="wrap_content"/>
       </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>