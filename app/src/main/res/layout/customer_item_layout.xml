<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/plan_card"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/primaryTextColor"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/customer_profile_picture"
                    android:layout_width="60dp"
                    android:src="@drawable/ic_account_circle"
                    android:layout_height="60dp"
                    app:tint="#696969" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/customer_name_text"
                    android:padding="4dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/darkColor"
                    android:fontFamily="@font/quicksand_medium"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="CUSTOMER NAME HERE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/customer_extra_dets"
                    android:padding="4dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:paddingStart="10dp"
                    android:textStyle="italic"
                    android:textColor="@color/darkColor"
                    android:text="19, Male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/customer_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_right_24"
                    app:drawableTint="@color/darkColor" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>