<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/primaryTextColor"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/plan_name_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="WEIGHT+PROTEIN"
                android:textAllCaps="true"
                android:fontFamily="@font/catamaran_regular"
                android:textAlignment="center"
                android:textColor="@color/darkColor"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/plan_desc_text"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/darkColor"
                android:text="Normal muscle-gain equipments\n\n2 * Whey Protein + Diet supplements subscription"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/plan_duration_text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:paddingStart="4dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/darkColor"
                android:text="2 months validity"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/plan_price_text"
                android:layout_width="match_parent"
                android:paddingStart="4dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/secondaryDarkColor"
                android:text="â‚¹ 699 /-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/buy_plan_text_clickable"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_regular"
                android:layout_width="match_parent"
                android:text="BUY PLAN"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:background="@color/secondaryDarkColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>